package com.lulan.shincolle.ai;

import com.lulan.shincolle.entity.BasicEntityShip;
import com.lulan.shincolle.utility.LogHelper;

import net.minecraft.entity.EntityLivingBase;
import net.minecraft.entity.ai.EntityAIBase;
import net.minecraft.entity.passive.EntityTameable;

/**SIT AI FOR SHIP
 * 可以在液體中坐下
 */
public class EntityAIShipSit extends EntityAIBase
{
    private EntityTameable theEntity;
    private boolean isSitting;

    public EntityAIShipSit(BasicEntityShip entity) {
        this.theEntity = entity;
        this.setMutexBits(5);
    }

    public boolean shouldExecute() {
        EntityLivingBase entitylivingbase = this.theEntity.getOwner();
        //必須是主人 & 主人沒有AI target & 該生物為坐下狀態
        LogHelper.info("DEBUG : owner null? "+entitylivingbase.toString());
        return entitylivingbase == null ? true : 
        	(entitylivingbase.getAITarget() != null ? false : this.isSitting);
    }

    public void startExecuting() {
        this.theEntity.getNavigator().clearPathEntity();
        this.theEntity.setSitting(true);
        LogHelper.info("DEBUG : ai sitting "+this.theEntity.isSitting());
    }

    public void resetTask() {
        this.theEntity.setSitting(false);
        LogHelper.info("DEBUG : reset ai sitting"+this.theEntity.isSitting());
    }

    public void setSitting(boolean par1) {
        this.isSitting = par1;
    }
}
